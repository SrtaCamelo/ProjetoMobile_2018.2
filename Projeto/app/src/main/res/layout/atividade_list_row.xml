<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btDetalhes"
        android:layout_marginStart="16dp"
        android:text="@string/titulo" />

    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="@string/horario" />

    <Button
        android:id="@+id/btDetalhes"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/tvHorario"
        android:text="@string/detalhes"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btFavoritar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btDetalhes"
        android:text="@string/favoritar" />
</RelativeLayout>